@using MvcStok.Models.Entity
@model List<TBLSatislar>
    @{
    ViewBag.Title = "OrderList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    }
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-6">
                    <h4>@ViewBag.urun.UrunAd - Satış Bilgisi</h4>
                </div>
                <div class="col-sm-6"></div>
            </div>
        </div>
        <div class="panel-body panel-yukseklik">
            <table class="table table-striped table-inverse table-responsive" id="example">
                <thead class="thead-inverse">
                    <tr>
                        <th>#</th>
                        <th>Müşteri</th>
                        <th class="text-right">Miktar</th>
                        <th class="text-right">Fiyat</th>
                        <th class="text-right">Tutar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.SatisId</td>
                        <td>@item.TBLMusteriler.MusteriAd @item.TBLMusteriler.MusteriSoyad</td>
                        <td class="text-right">@item.Adet</td>
                        <td class="text-right">@item.Fiyat</td>
                        <td class="text-right">@(item.Fiyat * item.Adet)</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="panel-footer">
            <div class="row text-center">
                <div class="col-sm-6">
                    <h4>Toplam Satış Miktarı = @ViewBag.SMiktari</h4>
                </div>
                <div class="col-sm-6">
                    <h4>Toplam Satış Tutarı = @ViewBag.SToplam</h4>
                </div>
            </div>
        </div>
    </div>
    <hr>
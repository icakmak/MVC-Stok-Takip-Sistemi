@using MvcStok.Models.Entity
@model List<TBLSatislar>
    @{
    ViewBag.Title = "OrderList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    }
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="row">
                <div class="col-sm-6">
                    <h4>@ViewBag.musteri.MusteriAd @ViewBag.musteri.MusteriSoyad - Satın Aldığı Ürünler</h4>
                </div>
                <div class="col-sm-6 text-right">
                    <a href="/musteri/order/?MusteriId=@ViewBag.musteri.MusteriId" class="btn btn-success btn-sm btn-block">Yeni Sipariş</a>
                </div>
            </div>
        </div>
        <div class="panel-body panel-yukseklik">
            <table class="table table-striped table-inverse table-responsive" id="example">
                <thead class="thead-inverse">
                    <tr>
                        <th>#</th>
                        <th>Ürün</th>
                        <th class="text-right">Miktar</th>
                        <th class="text-right">Fiyat</th>
                        <th class="text-right">Tutar</th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                    <tr>
                        <th colspan="6" class="text-center text-danger">Daha Ürün Satışı Gerçekleşmemiş!!</th>
                    </tr>
                    }
                    else
                    {
                    foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.SatisId</td>
                        <td>@item.TBLUrunler.UrunAd</td>
                        <td class="text-right">@item.Adet</td>
                        <td class="text-right">@item.Fiyat</td>
                        <td class="text-right">@(item.Fiyat * item.Adet)</td>

                    </tr>
                    }
                    }

                </tbody>
            </table>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-sm-6">
                    <h4>Toplam </h4>
                </div>
                <div class="col-sm-6 text-right">
                    <h4>@ViewBag.Toplam</h4>
                </div>
            </div>
        </div>
    </div>

    <hr>